<?xml version="1.0"?>
<KeyMap xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="Keymap.xsd">
    <Group Name="Application">
        <Shortcut Name="RenameItem" ActionId="actions.general.RenameItem" Description="Rename the thing">
            <KeyStroke Key="F2"/>
        </Shortcut>
        <Shortcut Name="RenameItem2" ActionId="actions.general.RenameItem" Description="Rename the thing">
            <KeyStroke Mods="CTRL" Key="R"/>
        </Shortcut>
        <Group Name="Editor">
            <Shortcut Name="SaveProject" ActionId="actions.project.Save">
                <KeyStroke Mods="CTRL" Key="S"/>
            </Shortcut>
            <Shortcut Name="SaveProjectAs" ActionId="actions.project.SaveAs">
                <KeyStroke Mods="CTRL+SHIFT" Key="S"/>
            </Shortcut>
            <Shortcut Name="OpenProject" ActionId="actions.project.Open">
                <KeyStroke Mods="CTRL" Key="O"/>
            </Shortcut>
            <Shortcut Name="UndoShortcut" ActionId="actions.project.history.Undo">
                <KeyStroke Mods="CTRL" Key="Z"/>
            </Shortcut>
            <Shortcut Name="RedoShortcut1" ActionId="actions.project.history.Redo">
                <KeyStroke Mods="CTRL+SHIFT" Key="Z"/>
            </Shortcut>
            <Shortcut Name="RedoShortcut2" ActionId="actions.project.history.Redo">
                <KeyStroke Mods="CTRL" Key="Y"/>
            </Shortcut>

            <Shortcut Name="IncreaseBrushSize">
                 <KeyStroke Key="OemCloseBrackets"/>
            </Shortcut>

            <Shortcut Name="DecreaseBrushSize">
                <KeyStroke Key="OemOpenBrackets"/>
            </Shortcut>

            <Shortcut Name="EditPrimaryColour">
                <KeyStroke Key="D1"/>
            </Shortcut>

            <Shortcut Name="EditSecondaryColour">
                <KeyStroke Key="D2"/>
            </Shortcut>

            <InputState Name="UseSecondaryColourState">
                <!--
                <InputState.ActivationMouseStroke Button="X1"/>
                -->
                <InputState.ActivationKeyStroke Key="Q"/>
            </InputState>
        </Group>
    </Group>
</KeyMap>